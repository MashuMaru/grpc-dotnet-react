{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "erasableSyntaxOnly": false,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "build",
    "noEmitOnError": true,
    "jsx": "react",
    "lib": ["esnext", "dom"]
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules"]
}